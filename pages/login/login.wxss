.container {
    /* height: 1334rpx; */
    height: 100%;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}
.container image {
    height: 100%;
    width: 100%;
}
.login_box {
    position: absolute;
    height: 1000rpx;
    width: 700rpx;
    background-color: white;
    top: 200rpx;
    opacity: 0.8;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    border-radius: 20rpx;
}
.login_title {
    margin-top: 70rpx;
}
.login_title text {
    font-size: 80rpx;
    color: black;
}
.login_form {
    height: 400rpx;
    width: 600rpx;
    /* background-color: wheat; */
    /* opacity: 1; */
    margin-top: 30rpx;
}
.login_form view,button {
    width: 550rpx;
    height: 100rpx;
    margin-left: 25rpx;
    margin-top: 80rpx;
    /* border: 1rpx solid rgba(0, 0,255, 0.3); */
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.3) ;
    background-color: white;
}
.login_form view text{
    font-size: 70rpx;
}

.login_form view input {
    height: 100rpx;
    position: relative;
    top: -100rpx;
    box-sizing: border-box;
    padding-left: 100rpx;
    font-size: 40rpx;
    color: rgba(0, 0, 0, 0.8);
}

.login_form button {
    width: 500rpx !important;
    border: none;
    line-height: 70rpx;
}

.wx_login_button {
    opacity:1;
    height: 80rpx !important;
    width: 80rpx !important;
    border-radius: 50rpx;
    position: absolute;
    top: 90%;
}
.wx_login_button image {
    height: 100%;
    width: 100%;
}
.regeister{
    top: -20%;
}