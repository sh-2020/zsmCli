.body {
    background-color: #f6f6f6;
    /* min-height: 1334rpx; */
}
.header {
    position: relative;
    height: 320rpx;
    width: 750rpx;
    background-color: #9fc6ff;
}
.header_img {
    position: absolute;
    height: 130rpx;
    width: 130rpx;
    border-radius: 20rpx;
    border: 1rpx white ridge;
    background-color: white;
    top: 113rpx;
    left: 38rpx;
}
.header_img > image {
    height: 100%;
    width: 100%;
}
.header_main {
    position: absolute;
    height: 130rpx;
    top: 120rpx;
    left: 208rpx;
}
.header_main .name {
    height: 80rpx;
    line-height: 80rpx;
}
.header_main > .name > text {
    font-size: 40rpx;
}
.header_main > .account >text {
    font-size: 25rpx;
}
.header_arrowhead {
    position: absolute;
    top: 158rpx;
    right: 40rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.header_arrowhead > text {
    font-size: 50rpx;
}
.ability_area {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
}
.ability_area > .ability_child {
    box-sizing: border-box;
    flex-grow:1;
    height: 170rpx;
    background-color: white;
    border: 2rpx #f6f6f6 solid;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:center;
}
.ability_area > .ability_child >text:nth-child(1) {
    font-size: 60rpx;
    margin-top: 10rpx;
}
.ability_area > .ability_child >text:nth-child(2) {
    font-size: 20rpx;
    margin-top: 10rpx;
}
.other_ability {
    width: 750rpx;
    margin-top: 30rpx;
}
.other_ability > .other_child {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    background-color: white;
}

.other_child > .other_image {
    height: 100rpx;
    width: 100rpx;
    flex-basis: 100rpx;
    display: flex;
    flex: row;
    justify-content: center;
    align-items: center;
}
.other_image >image {
    height: 40rpx;
    width: 40rpx;
}
.other_child > .other_text {
    box-sizing: border-box;
    flex-grow: 1;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 27rpx;
    padding-left: 10rpx;
    border-top: 2rpx #f6f6f6  solid;
    display: flex;
}
.other_child:nth-child(1) > .other_text {
    border-top: none;
}
.other_child > .other_text>text:nth-child(1){
    width: 500rpx;
    flex-grow: 5;
}
.other_child > .other_text>.iconfont{
    margin-right: 10rpx;
    flex-grow: 1;
}
.close{
    position: absolute;
    height: 100rpx;
    width: 100rpx;
}
.close>text{
    font-size: 40rpx;
    font-weight: 200;
}
