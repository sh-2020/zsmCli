
page {
  position: relative;
  background-color: #fff;
}

.header {
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
}
.header .title {
  font-size: 36rpx;
}
.place {
  background-color: #ffffff;
  height: 100rpx;
}
.server-list {
  width: 100%;
  padding: 20rpx 0 120rpx 0;
}
.server-list .tis {
  width: 100%;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
}
.server-list .row {
  width: 700rpx;
  height: 200rpx;
  margin: 20rpx auto;
  border-radius: 15rpx;
  -webkit-box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.server-list .row .img {
  margin-left: 40rpx;
  margin-top: 10rpx;
  height: 180rpx;
  width: 180rpx;
}
.server-list .row .img image {
  height: 100%;
  width: 100%;
}
.server-list .row .serverName {
  position: absolute;
  top: 20rpx;
  left: 250rpx;
  font-size: 36rpx;
}
.server-list .row .introduction {
  position: absolute;
  top: 90rpx;
  left: 250rpx;
  font-size: 20rpx;
}

